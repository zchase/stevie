{
    "compilerOptions": {
      "experimentalDecorators": true,
      "declaration": true,
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "lib": [
        "es2019",
        "es2015",
        "dom"
      ],
      "alwaysStrict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "outDir": "lib",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
  "include": [
      "src/*",
      "index.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}
